<Window x:Class="TabletopSystems.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TabletopSystems"
        xmlns:helpers="clr-namespace:TabletopSystems.Helper_Methods"
        mc:Ignorable="d"
        Title="Tabletop Systems" Height="450" Width="800"
        Background="#252525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel>
                <Button Height="20" Command="{Binding GoToSystemSelectionCommand}">Select System</Button>
            </StackPanel>
            <TextBox Grid.Row="1" Width="90" MaxLength="100" Text="{Binding Path=_connection,Mode=OneWayToSource}"/>
        </Grid>

        <ContentControl Grid.Column="1" Content="{Binding Navigation.CurrentView}"/>
    </Grid>
    
</Window>
